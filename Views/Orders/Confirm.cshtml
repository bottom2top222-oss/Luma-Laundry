@model LaundryOrder

@{
    ViewData["Title"] = "Order Confirmed";
}

<h1 class="mb-3">Order Confirmed</h1>

<div class="alert alert-success">
    <strong>Payment method saved!</strong> Your card will be charged after delivery is completed.
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Order #:</strong> @Model.Id</p>
        <p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
        <p><strong>Service:</strong> @Model.ServiceType</p>
        <p><strong>Date/Time:</strong> @Model.ScheduledAt</p>
        <p><strong>Address:</strong> @Model.GetDisplayAddress()</p>
        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <p><strong>Notes:</strong> @Model.Notes</p>
        }
        <p><strong>Payment Status:</strong> <span class="badge bg-primary">@(Model.PaymentStatus ?? "No Payment Status")</span></p>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-primary" href="/Orders/History">View All Orders</a>
    <a class="btn btn-outline-secondary" href="/Orders/Schedule">Schedule Another</a>
</div>
