@model List<LaundryOrder>

@{
    ViewData["Title"] = "Order History";
}

<h1 class="mb-3">Order History</h1>

@if (Model.Count == 0)
{
    <p>No orders yet. <a href="/Orders/Schedule">Schedule one</a>.</p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Service</th>
                <th>Scheduled</th>
                <th>Created</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var o in Model)
        {
            var badgeClass = o.Status switch
            {
                "PendingPickup" => "bg-secondary",
                "PickedUp" => "bg-info text-dark",
                "WeighedOrCounted" => "bg-primary",
                "Quoted" => "bg-warning text-dark",
                "Approved" => "bg-info",
                "InProgress" => "bg-primary",
                "Ready" => "bg-warning text-dark",
                "Paid" => "bg-success",
                "Delivered" => "bg-info text-dark",
                "Completed" => "bg-secondary",
                "PaymentFailed" => "bg-danger",
                "Cancelled" => "bg-danger",
                _ => "bg-dark"
            };

            var paymentBadgeClass = o.PaymentStatus switch
            {
                "NoPaymentMethod" => "bg-secondary",
                "PaymentMethodOnFile" => "bg-info",
                "ApprovalRequired" => "bg-warning text-dark",
                "Approved" => "bg-info",
                "ChargeAttempted" => "bg-warning text-dark",
                "Paid" => "bg-success",
                "PaymentFailed" => "bg-danger",
                "Refunded" => "bg-dark",
                _ => "bg-secondary"
            };

            <tr>
                <td>@o.Id</td>
                <td>
                    <span class="badge @badgeClass">@o.Status</span>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(o.PaymentStatus))
                    {
                        <span class="badge @paymentBadgeClass">@o.PaymentStatus</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No payment</span>
                    }
                </td>
                <td>@o.ServiceType</td>
                <td>@o.ScheduledAt.ToString("g")</td>
                <td>@o.CreatedAt.ToString("g")</td>
                <td>@o.GetDisplayAddress()</td>
                <td class="text-end">
                    @if (o.Status == "PendingPickup" && o.PaymentStatus != "PaymentMethodOnFile")
                    {
                        <a href="/Orders/SavePaymentMethod/@o.Id" class="btn btn-sm btn-primary me-2">Save Card</a>
                        <form method="post" action="/Orders/Cancel/@o.Id" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-danger">Cancel</button>
                        </form>
                    }
                    else if (o.Status == "PendingPickup" && o.PaymentStatus == "PaymentMethodOnFile")
                    {
                        <span class="badge bg-success">Card Saved</span>
                    }
                    else if (o.Status == "Quoted" || o.PaymentStatus == "ApprovalRequired")
                    {
                        <form method="post" action="/Orders/ApproveQuote/@o.Id" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-success me-2">Approve & Continue</button>
                        </form>
                        <a href="mailto:support@luma-laundry.app" class="btn btn-sm btn-outline-light">Message Support</a>
                    }
                    else if (o.PaymentStatus == "PaymentFailed")
                    {
                        <a href="/Orders/UpdatePaymentMethod/@o.Id" class="btn btn-sm btn-warning me-2">Update Card</a>
                        <form method="post" action="/Orders/RetryPayment/@o.Id" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-primary">Retry Payment</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Orders/Invoice/@o.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}

