@model LaundryOrder

@{
    ViewData["Title"] = "Update Payment Method";
}

<h1 class="mb-3">Update Payment Method</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Order Summary</h5>
            </div>
            <div class="card-body">
                <p><strong>Order #:</strong> @Model.Id</p>
                <p><strong>Service:</strong> @Model.ServiceType</p>
                <p><strong>Date/Time:</strong> @Model.ScheduledAt</p>
                <p><strong>Address:</strong> @Model.GetDisplayAddress()</p>
                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <p><strong>Notes:</strong> @Model.Notes</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Payment Method</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Payment Card Declined.</strong> Please update your payment method.
                </div>

                @if (!(ViewBag.StripeConfigured as bool? ?? false))
                {
                    <div class="alert alert-warning">
                        Stripe is not configured yet. Set <strong>Stripe:SecretKey</strong> in app settings.
                    </div>
                }

                @if (TempData["Error"] is string error && !string.IsNullOrWhiteSpace(error))
                {
                    <div class="alert alert-danger">@error</div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@err.ErrorMessage</div>
                        }
                    </div>
                }
                
                <form method="post" action="/Orders/UpdatePaymentMethod/@Model.Id">
                    @Html.AntiForgeryToken()

                    <p class="mb-3 text-muted">
                        You’ll continue to Stripe’s secure checkout page to update your saved card.
                    </p>
                    
                    <button type="submit" class="btn btn-warning w-100" @(ViewBag.StripeConfigured as bool? ?? false ? null : "disabled")>Continue to Secure Checkout</button>
                </form>
                
                <div class="mt-3 text-center">
                    <a href="/Orders/History" class="btn btn-outline-secondary">Back to History</a>
                </div>
            </div>
        </div>
    </div>
</div>
