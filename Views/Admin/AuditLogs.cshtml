@model IEnumerable<LaundryApp.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<h1>Audit Logs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>User</th>
            <th>Action</th>
            <th>Entity</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@log.UserEmail</td>
                <td>@log.Action</td>
                <td>@log.Entity</td>
                <td>@log.Details</td>
            </tr>
        }
    </tbody>
</table>