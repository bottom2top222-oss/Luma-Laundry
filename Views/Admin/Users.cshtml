@model List<LaundryApp.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">User Management</h1>
        <div class="text-muted">Manage user roles and permissions</div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-primary" href="/Admin/CreateUser">Create User</a>
        <a class="btn btn-outline-secondary" href="/Admin">Back to Orders</a>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Users (@Model.Count)</h5>
    </div>
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <p class="text-muted">No users found.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Roles</th>
                            <th>Admin Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.AddressLine1))
                                    {
                                        <small>
                                            @user.AddressLine1<br/>
                                            @if (!string.IsNullOrEmpty(user.AddressLine2))
                                            {
                                                @user.AddressLine2<br/>
                                            }
                                            @user.City, @user.State @user.ZipCode
                                        </small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@user.Roles</span>
                                </td>
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge bg-success">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">User</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <form method="post" action="/Admin/ToggleAdmin" class="d-inline">
                                            <input type="hidden" name="userId" value="@user.UserId" />
                                            <button type="submit" class="btn btn-sm @(user.IsAdmin ? "btn-outline-danger" : "btn-outline-success")">
                                                @(user.IsAdmin ? "Remove Admin" : "Make Admin")
                                            </button>
                                        </form>
                                        <a href="/Admin/EditUser/@user.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" action="/Admin/DeleteUser" class="d-inline">
                                            <input type="hidden" name="id" value="@user.UserId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>