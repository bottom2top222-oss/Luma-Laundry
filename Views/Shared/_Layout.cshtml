<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaundryApp.styles.css" asp-append-version="true" />
</head>
<body class="app-shell">
    <header>
        <nav class="navbar navbar-expand-lg landing-nav mb-3">
            <div class="container landing-nav-shell">
                <a class="navbar-brand landing-brand" asp-area="" asp-controller="Home" asp-action="Index">LUMA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto landing-links">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/#features">Features</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Pricing">Pricing</a></li>
                        <li class="nav-item"><a class="nav-link" href="/#faq">FAQ</a></li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Schedule">Schedule</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a></li>
                            }
                        }
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="landing-signin" asp-area="" asp-controller="Home" asp-action="Dashboard">@User.Identity?.Name</a>
                            <form method="post" action="/Account/Logout" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn landing-ghost-btn">Logout</button>
                            </form>
                            <a class="btn landing-cta-btn" asp-area="" asp-controller="Orders" asp-action="Schedule">Schedule Pickup</a>
                        }
                        else
                        {
                            <a class="landing-signin" asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
                            <a class="btn landing-cta-btn" asp-area="" asp-controller="Account" asp-action="Register">Schedule Pickup</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3 page-fade">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2026 - Luma - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -
            <a asp-area="" asp-controller="Account" asp-action="Terms">Terms</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
