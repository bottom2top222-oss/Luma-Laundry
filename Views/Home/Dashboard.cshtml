@{
    ViewBag.Title = "Dashboard";

    var email = User?.Identity?.Name ?? "";
    var isAdmin = User?.IsInRole("Admin") ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5">Dashboard</h1>
        <p class="text-muted mb-0">Logged in as <strong>@email</strong></p>
    </div>

    <form method="post" action="/Account/Logout">
        @Html.AntiForgeryToken()
        <button class="btn btn-outline-danger">Logout</button>
    </form>
</div>

<div class="d-flex gap-3 flex-wrap">
    <a class="btn btn-primary btn-lg" href="/Orders/Schedule">Schedule Service</a>
    <a class="btn btn-outline-secondary btn-lg" href="/Orders/History">Order History</a>

    @if (isAdmin)
    {
        <a class="btn btn-warning btn-lg" href="/Admin">Admin Dashboard</a>
    }
</div>





