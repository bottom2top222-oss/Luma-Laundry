@{
    ViewBag.Title = "Dashboard";

    var email = User?.Identity?.Name ?? "";
    var isAdmin = User?.IsInRole("Admin") ?? false;
}

<div class="container dashboard-shell user-dashboard-shell py-4">
    <div class="dashboard-banner user-dashboard-banner mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h1 class="display-5 user-dashboard-title mb-1">LUMA</h1>
            <p class="mb-0 user-dashboard-subtitle">Logged in as <strong>@email</strong></p>
        </div>

        <form method="post" action="/Account/Logout">
            @Html.AntiForgeryToken()
            <button class="btn user-dashboard-btn-outline">Logout</button>
        </form>
    </div>

    <div class="row g-3">
        <div class="col-lg-4 col-md-6">
            <a class="user-dashboard-action" href="/Orders/Schedule">
                <span class="user-dashboard-action-title">Schedule Pickup</span>
                <span class="user-dashboard-action-subtitle">Book pickup, drop-off, or full service in under a minute.</span>
            </a>
        </div>

        <div class="col-lg-4 col-md-6">
            <a class="user-dashboard-action" href="/Orders/History">
                <span class="user-dashboard-action-title">Order History</span>
                <span class="user-dashboard-action-subtitle">Review recent orders and current status updates.</span>
            </a>
        </div>

        @if (isAdmin)
        {
            <div class="col-lg-4 col-md-6">
                <a class="user-dashboard-action" href="/Admin">
                    <span class="user-dashboard-action-title">Admin Dashboard</span>
                    <span class="user-dashboard-action-subtitle">Manage orders, users, and operational activity.</span>
                </a>
            </div>
        }
    </div>
</div>





